<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
</head>
<body>
  <h1>Welcome, <%= user.username %>!</h1>

  <!-- User Balance -->
  <section>
    <h2>Your Balance</h2>
    <p id="user-balance">$0.00</p>
  </section>

  <!-- Transaction History -->
  <section>
    <h2>Transaction History</h2>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Type</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody id="transaction-history">
        <!-- Transactions will be dynamically inserted here -->
      </tbody>
    </table>
  </section>

  <!-- Add Transaction -->
  <section>
    <h2>Add a Transaction</h2>
    <form id="transaction-form">
      <label for="type">Transaction Type:</label>
      <select id="type" required>
        <option value="deposit">Deposit</option>
        <option value="withdraw">Withdraw</option>
        <option value="expense">Expense</option>
      </select>

      <label for="amount">Amount:</label>
      <input type="number" id="amount" min="0.01" step="0.01" required>

      <button type="submit">Submit</button>
    </form>
    <p id="transaction-message"></p>
  </section>

  <!-- Investment Calculator -->
  <section>
    <h2>Investment Calculator</h2>
    <form id="investment-calculator">
      <label for="capital">Initial Capital:</label>
      <input type="number" id="capital" required>

      <label for="rate">Interest Rate (%):</label>
      <input type="number" id="rate" step="0.01" required>

      <label for="time">Time (years):</label>
      <input type="number" id="time" required>

      <button type="submit">Calculate</button>
    </form>
    <p id="investment-result"></p>
  </section>

  <!-- Link to JavaScript -->
  <script src="/js/transaction.js"></script>
  <script src="/js/dashboard.js"></script>
</body>
</html>
