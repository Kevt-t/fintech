    <h2>Deposit</h2>
    <form id="depositForm">
        <input type="number" name="amount" placeholder="Amount" required>
        < button type="submit">Deposit</button>
    </form>

    <h2>Withdraw</h2>
    <form id="withdrawForm">
        <input type="number" name="amount" placeholder="Amount" required>
        <button type="submit">Withdraw</button>
    </form>

    <script>
        // Add JavaScript to handle form submissions for deposits and withdrawals
        document.getElementById('depositForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const amount = this.amount.value;
            // Make an API call to deposit the amount
            fetch('/api/transactions/deposit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ amount })
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('balance').innerText = data.newBalance;
                this.reset();
            });
        });

        document.getElementById('withdrawForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const amount = this.amount.value;
            // Make an API call to withdraw the amount
            fetch('/api/transactions/withdraw', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ amount })
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('balance').innerText = data.newBalance;
                this.reset();
            });
        });
    </script>
</body> 